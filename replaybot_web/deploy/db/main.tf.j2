{{ edit_message }}

variable "aws_account_id" {}
variable "domain_name" {}
variable "region" {}
variable "role" {}
{% for table in tables %}
resource "aws_dynamodb_table" "{{ table.name }}" {
  name           = "{{ table.name }}"
  billing_mode   = "PAY_PER_REQUEST"
  hash_key       = "id"
  attribute {
    name = "id"
    type = "S"
  }
  
  {% if table.expires != "" %}
  ttl {
    attribute_name = "expires"
    enabled        = true
  }
  {% endif %}

  {% if table.sort_key != "" %}
  attribute {
    name = "{{ table.sort_key }}"
    type = "S"
  }
  attribute {
    name = "{{ table.sort_key }}_index"
    type = "S"
  }
  global_secondary_index {
    name               = "{{ table.sort_key }}_sort"
    hash_key           = "{{ table.sort_key }}_index"
    range_key          = "{{ table.sort_key }}"
    projection_type    = "ALL"
  }
  {% endif %}

  {% for index in table.indexes %}
  attribute {
    name = "{{ index }}"
    type = "S"
  }
  global_secondary_index {
    name               = "{{ index }}_index"
    hash_key           = "{{ index }}"
    projection_type    = "ALL"
  }
  {% endfor %}
}

resource "aws_iam_policy" "policy_{{ table.name }}" {
  name        = "${var.domain_name}_{{ table.name }}_db_policy"
  description = "${var.domain_name} {{ table.name }}_db policy"

  policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
        "Sid": "AllAPIActionsOnBooks",
        "Effect": "Allow",
        "Action": "dynamodb:*",
        "Resource": "arn:aws:dynamodb:${var.region}:${var.aws_account_id}:table/{{ table.name }}"
    }{% if table.indexes|length > 0 %},{% endif %}
    {% for index in table.indexes %}
      {
          "Sid": "AllQueryOn{{ index }}",
          "Effect": "Allow",
          "Action": "dynamodb:Query",
          "Resource": "arn:aws:dynamodb:${var.region}:${var.aws_account_id}:table/{{ table.name }}/index/{{ index }}_index"
      }{% if not loop.last %},{% endif %}
    {% endfor %}
    {% if table.sort_key != "" %}
      ,
      {
          "Sid": "AllQueryOn{{ table.sort_key }}",
          "Effect": "Allow",
          "Action": "dynamodb:Query",
          "Resource": "arn:aws:dynamodb:${var.region}:${var.aws_account_id}:table/{{ table.name }}/index/{{ table.sort_key }}_sort"
      }
    {% endif %}
  ]
}
EOF
}

resource "aws_iam_policy_attachment" "attach_{{ table.name }}" {
  name       = "{{ table.name }}_attachment"
  roles      = ["${var.role.name}"]
  policy_arn = "${aws_iam_policy.policy_{{ table.name }}.arn}"
}
{% endfor %}
